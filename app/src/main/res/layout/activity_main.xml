<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <!-- Compact Header with Sasya Arogya Banner -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        android:background="@drawable/modern_card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/modern_card_background">

            <!-- App Icon -->
            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_leaf"
                android:background="@drawable/modern_button"
                android:padding="8dp"
                android:layout_marginRight="12dp" />

            <!-- Simplified Title -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¿ Sasya Arogya"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#2D3748"
                android:gravity="center_vertical" />

            <!-- State Indicator -->
            <TextView
                android:id="@+id/stateIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready"
                android:textSize="12sp"
                android:textColor="#4299E1"
                android:textStyle="italic"
                android:background="@drawable/modern_button"
                android:padding="6dp"
                android:layout_marginRight="8dp" />

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/settingsBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_manage"
                android:background="@drawable/modern_button"
                android:padding="8dp"
                android:contentDescription="Server Settings"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Enhanced Chat Conversation Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        android:background="@drawable/chat_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/chat_background">

            <!-- Chat Messages RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:scrollbarSize="6dp"
                android:clipToPadding="false"
                android:background="@drawable/chat_background" />

            <!-- Follow-up Buttons Container -->
            <LinearLayout
                android:id="@+id/followUpContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone"
                android:background="@android:color/transparent">

                <TextView
                    android:id="@+id/followUpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ What would you like to know next?"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/followUpChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacing="8dp"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="4dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Modern Upload Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/uploadSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        android:visibility="gone"
        android:background="@drawable/modern_input_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/modern_input_background">

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:layout_marginRight="12dp"
                android:background="@drawable/modern_button"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/imageFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“· Image attached"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to analyze"
                    android:textSize="12sp"
                    android:textColor="#718096"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/removeImageBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_delete"
                android:background="@drawable/modern_button"
                android:padding="8dp"
                android:contentDescription="Remove image"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Modern Bottom Input Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"
        android:background="@drawable/modern_input_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/modern_input_background">

            <ImageButton
                android:id="@+id/uploadBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_camera"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:layout_marginRight="8dp"
                android:contentDescription="Upload photo"/>

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ask about your plants... ðŸŒ±"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:maxLines="4"
                android:inputType="textMultiLine|textCapSentences"
                android:textSize="16sp"
                android:textColor="#2D3748"
                android:textColorHint="#A0AEC0"
                android:minHeight="50dp"/>

            <ImageButton
                android:id="@+id/sendBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_send"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:layout_marginLeft="8dp"
                android:contentDescription="Send message"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
