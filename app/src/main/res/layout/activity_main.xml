<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <!-- Modern Header Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:background="@drawable/modern_card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/modern_card_background">

            <!-- App Icon -->
            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_leaf"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:layout_marginRight="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- App Title -->
                <TextView
                    android:id="@+id/appTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¿ Sasya Chikitsa"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2D3748"
                    android:layout_marginBottom="4dp"/>

                <!-- App Subtitle -->
                <TextView
                    android:id="@+id/appSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI-powered plant diagnosis"
                    android:textSize="14sp"
                    android:textColor="#4A5568"
                    android:layout_marginBottom="4dp"/>

                <!-- App Description -->
                <TextView
                    android:id="@+id/appDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload a photo of your plant for instant health analysis"
                    android:textSize="12sp"
                    android:textColor="#718096"
                    android:layout_marginBottom="4dp"/>

                <!-- Server Status -->
                <TextView
                    android:id="@+id/serverStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¡ Server: Android Emulator"
                    android:textSize="10sp"
                    android:textColor="#4299E1"
                    android:textStyle="italic"/>
            </LinearLayout>

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/settingsBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_manage"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:layout_marginLeft="16dp"
                android:contentDescription="Server Settings"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Modern Conversation Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:background="@drawable/chat_background">

        <ScrollView
            android:id="@+id/conversationScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/chat_background"
            android:padding="16dp"
            android:fillViewport="false"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarSize="8dp"
            android:scrollbarStyle="outsideOverlay">
            
            <TextView
                android:id="@+id/responseTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ¤– Hi! I'm your plant health assistant. Upload a photo or ask me about plant care."
                android:padding="16dp"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"
                android:textColor="#2D3748"
                android:background="@drawable/chat_background"
                android:layout_marginBottom="16dp"
                android:minHeight="500dp" />
                    
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Modern Upload Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/uploadSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        android:visibility="gone"
        android:background="@drawable/modern_input_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/modern_input_background">

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:layout_marginRight="12dp"
                android:background="@drawable/modern_button"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/imageFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“· Image attached"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to analyze"
                    android:textSize="12sp"
                    android:textColor="#718096"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/removeImageBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_delete"
                android:background="@drawable/modern_button"
                android:padding="8dp"
                android:contentDescription="Remove image"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Modern Bottom Input Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"
        android:background="@drawable/modern_input_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/modern_input_background">

            <ImageButton
                android:id="@+id/uploadBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_camera"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:layout_marginRight="8dp"
                android:contentDescription="Upload photo"/>

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ask about your plants... ðŸŒ±"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:maxLines="4"
                android:inputType="textMultiLine|textCapSentences"
                android:textSize="16sp"
                android:textColor="#2D3748"
                android:textColorHint="#A0AEC0"
                android:minHeight="50dp"/>

            <ImageButton
                android:id="@+id/sendBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_send"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:layout_marginLeft="8dp"
                android:contentDescription="Send message"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
