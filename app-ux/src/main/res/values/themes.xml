<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SasyaChikitsyaUX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sasya_green_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/sasya_green_light</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sasya_green_light</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="colorSecondaryContainer">@color/button_secondary</item>
        <item name="colorOnSecondaryContainer">@color/text_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_white</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>
</resources>
